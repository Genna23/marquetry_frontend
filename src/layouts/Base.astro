---
import Navbar from "../partials/base/Navbar.astro"
import "../styles/global.css"

import StoryblokBridge from "../StoryblokBridge.astro"

const { title = 'Маркетри', nav_links = [], logo, phone } = Astro.props

---
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <StoryblokBridge onUpdate={() => location.reload()} />
      <Navbar nav_links={nav_links} {logo} {phone}/>
      <slot />
    </main>
  </body>
</html>
