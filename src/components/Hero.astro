---
interface Props {
  title: string;
  subtitle: string;
  image: string;
  buttonText: string;
}

const { title, subtitle, image, buttonText } = Astro.props;
---

<section class="py-20 text-center">
  <h1 class="text-4xl font-bold">{title}</h1>
  <p class="mt-4 text-lg">{subtitle}</p>
  <img class="mx-auto mt-6 max-w-xl" src={image} alt="Hero image" />
  <a href="#contact" class="mt-6 inline-block px-6 py-3 bg-black text-white rounded">
    {buttonText}
  </a>
</section>
