---

const {title, card_style, icon} = Astro.props

import { Picture } from 'astro:assets';

import getPictureValues from '../../../lib/picture';

---

<div class:list={[card_style === 'default' ? 'bg-main-light' : 'border-2 border-main-dark', 'rounded-2xl p-10 flex flex-col items-center w-full xl:w-1/3 gap-2']}>

    <Picture {...getPictureValues(icon)} class="max-w-full" formats={['avif', 'webp']}  />
    <h4>{title}</h4>

</div>